extends layout

block content
  .container
    h1 league #{leaguename}
    i #{john} 
      if (teams)
        each team in teams
          li 
            a(href="/team/"+team._id) #{team.teamname} 



      form(role='form', action="/create-team",method="post")
       .form-group
          input.form-control(type='text', name="teamname", placeholder='Create Team')
       button.btn.btn-default(type='submit') Submit
       &nbsp;
       a(href='/')
         button.btn.btn-primary(type="button") Cancel
 